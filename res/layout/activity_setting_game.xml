<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#292439"
    android:paddingTop="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SETTINGS"
        android:textSize="28dp"
        android:gravity="center_horizontal"
        android:textColor="#b5b2bd"/>
    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/list"/>
    <TextView
        android:id="@+id/sound"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Sound Off"
        android:textColor="#ff515a"
        android:textSize="20dp"
        android:gravity="center"
        android:clickable="true"
        android:onClick="sound_control"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/list"/>
    <TextView
        android:id="@+id/vibration"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Vibration Off"
        android:textColor="#ff515a"
        android:textSize="20dp"
        android:gravity="center"
        android:clickable="true"
        android:onClick="vibration_control"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/list"/>
    <TextView
        android:id="@+id/music"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Music Off"
        android:textColor="#ff515a"
        android:textSize="20dp"
        android:gravity="center"
        android:clickable="true"
        android:onClick="music_control"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/list"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/list"/>
    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="BACK"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="#b5b2bd"
        android:clickable="true"
        android:onClick="back_to_main"/>

</LinearLayout>
